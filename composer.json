{
    "name": "bnsoftware/lti-1p3-tool",
    "type": "library",
    "description": "A library used for building IMS-certified LTI 1.3 tool providers in PHP.",
    "license": "Apache-2.0",
    "keywords": [
        "lti"
    ],
    "authors": [
        {
            "name": "Dave Young",
            "email": "dave@screencast-o-matic.com"
        }
    ],
    "require": {
        "firebase/php-jwt": "^5.5|^6.0",
        "guzzlehttp/guzzle": "^7.0.1",
        "phpseclib/phpseclib": "^2.0"
    },
    "require-dev": {
        "jubeki/laravel-code-style": "^1.0",
        "mockery/mockery": "^1.4",
        "nesbot/carbon": "^2.43",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "BNSoftware\\Lti1p3\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "lint": "php-cs-fixer fix -v --dry-run",
        "lint-fix": "php-cs-fixer fix -v"
    }
}
